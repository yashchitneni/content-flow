# Descript OAuth Configuration
DESCRIPT_CLIENT_ID=your_descript_client_id_here
DESCRIPT_CLIENT_SECRET=your_descript_client_secret_here

# Optional: Custom redirect URI (defaults to contentflow://auth/callback)
# DESCRIPT_REDIRECT_URI=contentflow://auth/callback

# Optional: Custom API base URL (defaults to https://api.descript.com)
# DESCRIPT_API_BASE_URL=https://api.descript.com

# AI Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Workflow Configuration (optional overrides)
AI_PROVIDER=openai # or anthropic
ANALYSIS_MODEL=gpt-4-turbo-preview
GENERATION_MODEL=gpt-4-turbo-preview
SUMMARIZATION_MODEL=gpt-3.5-turbo

# Logging Configuration
LOG_LEVEL=info # error, warn, info, debug
LOG_FORMAT=pretty # json, pretty